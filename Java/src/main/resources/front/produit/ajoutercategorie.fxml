<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.produitfront.AjouterCategorieController"
            prefWidth="420" prefHeight="360"
            stylesheets="@/styles/agri-stylesa.css">

    <VBox spacing="10" alignment="TOP_LEFT"
          AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <padding>
            <Insets top="20" bottom="20" left="30" right="30"/>
        </padding>

        <Label text="➕ Nouvelle Catégorie" styleClass="form-title" alignment="CENTER"/>

        <!-- Label + Champ Nom -->
        <Label text="Nom de la catégorie" style="-fx-text-fill: black;"/>
        <TextField fx:id="nomField" promptText="Nom de la catégorie" />
        <Label fx:id="nomError" visible="false" styleClass="error-msg" />

        <!-- Label + Boutons pour image -->
        <Label text="Image" style="-fx-text-fill: black;"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Choisir Image" onAction="#choisirImage"/>
            <Button text="Prendre Photo" onAction="#prendrePhoto"/>
        </HBox>
        <Label fx:id="imageError" visible="false" styleClass="error-msg" />

        <!-- Aperçu image -->
        <ImageView fx:id="imagePreview" fitWidth="120" fitHeight="90" preserveRatio="true"
                   style="-fx-border-color: lightgray;"/>

        <!-- Boutons action -->
        <HBox spacing="10" alignment="CENTER">
            <Button text="Ajouter" onAction="#ajouterCategorie" styleClass="add-button"/>
            <Button text="Annuler" onAction="#fermerFenetre" styleClass="cancel-button"/>
        </HBox>

    </VBox>
</AnchorPane>

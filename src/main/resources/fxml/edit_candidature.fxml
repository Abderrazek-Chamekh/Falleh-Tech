<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>

<VBox spacing="15" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.EditCandidatureController"
      alignment="CENTER_LEFT" style="-fx-padding: 20;">

    <Label text="📝 Modifier la Candidature" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <HBox spacing="10">
        <Label text="Statut:" />
        <ComboBox fx:id="statutCombo" prefWidth="200"/>
    </HBox>

    <HBox spacing="10">
        <Label text="Note (facultatif):" />
        <TextField fx:id="ratingField" promptText="Entrez une note"/>
    </HBox>

    <HBox spacing="15">
        <Button text="✅ Enregistrer" onAction="#onSave"/>
        <Button text="❌ Annuler" onAction="#onCancel"/>
    </HBox>
</VBox>

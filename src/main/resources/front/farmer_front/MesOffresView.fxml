<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/21.0.1"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="tn.esprit.Controllers.front.farmer.MesOffresController"
           fx:id="contentPaneRef">

    <AnchorPane>
        <VBox spacing="20" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
              style="-fx-padding: 30;">

            <!-- Title -->
            <Label text="📋 Mes Offres d'Emploi"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #1e3a5f;" />

            <!-- Toolbar -->
            <HBox spacing="10">
                <Button text="➕ Ajouter une offre" fx:id="btnAddOffer" />
                <Region HBox.hgrow="ALWAYS" />
                <ToggleButton fx:id="btnAllOffers" text="🌐 Toutes les offres" selected="true" />
                <ToggleButton fx:id="btnMyOffers" text="👤 Mes offres" />
            </HBox>

            <!-- Offers container -->
            <ScrollPane fitToWidth="true" fx:id="scrollPane" style="-fx-background-color:transparent;">
                <FlowPane fx:id="offersGrid"
                          hgap="20" vgap="20"
                          style="-fx-padding: 20;">
                    <!-- Cards will be dynamically added here -->
                </FlowPane>
            </ScrollPane>

        </VBox>
    </AnchorPane>
</StackPane>

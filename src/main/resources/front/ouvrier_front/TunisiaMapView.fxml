<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.controllers.TunisiaMapController"
            style="-fx-background-color: linear-gradient(to bottom right, #e0f7fa, #ffffff);">

    <Label text="🗺️ Carte de la Tunisie"
           layoutX="30" layoutY="20"
           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <HBox layoutX="30" layoutY="70" spacing="40">

        <!-- Left Card: Selected Governorate -->
        <VBox prefWidth="400" prefHeight="600"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-spacing: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);"
              spacing="20" alignment="TOP_CENTER">

            <Label text="🛡️ Gouvernorat sélectionné"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <Pane fx:id="singleGovernoratePane"
                  prefWidth="360" prefHeight="400"
                  style="-fx-background-color: #f8f8f8; -fx-background-radius: 10;" />

            <!-- 📍 Governorate Name -->
            <Label fx:id="governorateNameLabel"
                   text="📍 Aucun sélectionné"
                   style="-fx-font-size: 18px; -fx-text-fill: #34495e;" />

            <!-- 💼 Offers Count -->
            <Label fx:id="offersCountLabel"
                   text="💼 Nombre d'offres: 0"
                   style="-fx-font-size: 16px; -fx-text-fill: #7f8c8d;" />

        </VBox>

        <!-- Right Card: Tunisia Full Map -->
        <VBox prefWidth="800" prefHeight="600"
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20; -fx-spacing: 20; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 10, 0, 0, 0);">

            <Pane fx:id="mapPane"
                  prefWidth="760" prefHeight="540"
                  style="-fx-background-color: transparent;" />

        </VBox>

    </HBox>

</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../styles/agri-style.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.fx.SousCategorieController">

    <VBox alignment="TOP_CENTER" spacing="10"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
          AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>

        <Label text="Gestion des Sous-Catégories"/>

        <HBox spacing="10">
            <VBox spacing="5">
                <TextField fx:id="nomField" promptText="Nom de la sous-catégorie"/>
                <ComboBox fx:id="categorieComboBox" promptText="catégories" prefWidth="200"/>
                <HBox spacing="10">
                    <Button text="Choisir Image" onAction="#choisirImage"/>
                    <Button text="Prendre Photo" onAction="#prendrePhoto"/>
                </HBox>
            </VBox>
            <ImageView fx:id="imagePreview" fitWidth="160" fitHeight="120" preserveRatio="true"
                       style="-fx-border-color: gray;"/>
        </HBox>

        <Button onAction="#ajouterSousCategorie" text="Ajouter / Modifier"/>

        <TableView fx:id="tableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50" text="ID"/>
                <TableColumn fx:id="nomCol" prefWidth="200" text="Nom"/>
                <TableColumn fx:id="categorieCol" prefWidth="200" text="Catégorie"/>
                <TableColumn fx:id="imageCol" prefWidth="100" text="Image"/>
                <TableColumn fx:id="actionCol" prefWidth="200" text="Actions"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

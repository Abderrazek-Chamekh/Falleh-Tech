<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="borderPane" prefHeight="683.0" prefWidth="967.0" stylesheets="@showPost.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.Blog.Post.ShowPostsController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" styleClass="sidebar">
            <!-- Logo and Title Container -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="logo-title-container">
                <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                    <image>
                        <Image url="@/Images/logo.png" />
                    </image>
                </ImageView>
                <Label styleClass="project-title" text="Falleh Tech" />
            </HBox>
            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu">
                <Button onAction="#handleProfile" styleClass="nav-btn" text="Profil">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/profile.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button fx:id="dashboardBtn" styleClass="nav-btn" text="Dashboard">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/dashboard.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn active" text="Blog">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/blog.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Candidature">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/application.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Starred">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/starred.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Offres">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/offer.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <!-- User Profile Section -->
            <VBox spacing="10" styleClass="user-profile">
                <ImageView fitHeight="60" fitWidth="60" styleClass="profile-img">
                    <image>
                        <Image url="@/Images/icons/profile.png" />
                    </image>
                </ImageView>
                <Label fx:id="userRoleLabel" styleClass="user-role" />
                <Button onAction="#handleLogout" styleClass="logout-btn" text="Logout">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/LOGOUT.gif" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Center Content (Posts Management) -->
    <center>
        <VBox spacing="20" styleClass="content-container">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" styleClass="header">
                <Label styleClass="header-title" text="Posts Management" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <!-- Search and Filter -->
            <HBox spacing="15" styleClass="toolbar">
                <TextField fx:id="searchField" promptText="🔍 Search Publications..." styleClass="search-field" visible="false" />
                <Button onAction="#handleRecherche" styleClass="refresh-btn" text="Search" visible="false" />
                <ComboBox fx:id="categoryCombo" promptText="Filter by category" styleClass="filter-combo" visible="false">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="All" />
                            <String fx:value="Agriculture" />
                            <String fx:value="Technology" />
                            <String fx:value="Recipes" />
                            <String fx:value="Urban Farming" />
                        </FXCollections>
                    </items>
                </ComboBox>
               <!-- In your toolbar HBox, add this button after the search components -->
               <Button onAction="#handleRefresh" styleClass="refresh-btn" text="Refresh Page">
                   <graphic>
                       <ImageView fitHeight="16" fitWidth="16">
                           <image>
                               <Image url="@/Images/icons/reset.gif" />
                           </image>
                       </ImageView>
                   </graphic>
               </Button>
            </HBox>

            <ListView fx:id="All" prefHeight="480.0" prefWidth="960.0" styleClass="publication-list" />

            <HBox fx:id="adminControls" spacing="15" >
                <Button fx:id="ajouter" onAction="#handleAjouter" styleClass="add-button" text="➕ Add" />
                <Button fx:id="mod" onAction="#handleModifier" styleClass="edit-button" text="✏️ Edit" />
                <Button fx:id="supp" onAction="#handleSupprimer" styleClass="delete-button" text="🗑️ Delete" />
                <Button fx:id="statsBtn" onAction="#handleShowStats" styleClass="add-button" text="📊 Statistics" />
            </HBox>
        </VBox>
    </center>
</BorderPane>

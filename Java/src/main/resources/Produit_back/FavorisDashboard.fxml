<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.fx.FavorisDashboardController"
            prefWidth="800" prefHeight="500"
            stylesheets="@../styles/agri-style.css">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <Label text="Favoris des utilisateurs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <TableView fx:id="tableFavoris" prefHeight="450">
            <columns>
                <TableColumn fx:id="colUserId" text="ID User"/>
                <TableColumn fx:id="colImage" text="Image"/>
                <TableColumn fx:id="colNom" text="Nom"/>
                <TableColumn fx:id="colPrix" text="Prix"/>
                <TableColumn fx:id="colStock" text="Stock"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Controllers.front.farmer.OffreCardController"
      spacing="12" alignment="TOP_LEFT" prefWidth="260"
      styleClass="offre-card">

    <!-- 🔹 Title -->
    <Label fx:id="lblTitre" styleClass="offre-title"/>

    <!-- 🔹 Description -->
    <Label fx:id="lblDescription" wrapText="true" styleClass="offre-description"/>

    <!-- 🔹 Salary & Location -->
    <VBox spacing="4" styleClass="offre-details">
        <HBox spacing="8">
            <Label text="💰 Salaire:" styleClass="offre-label"/>
            <Label fx:id="lblSalaire" styleClass="offre-value"/>
        </HBox>
        <HBox spacing="8">
            <Label text="📍 Lieu:" styleClass="offre-label"/>
            <Label fx:id="lblLocation" styleClass="offre-value"/>
        </HBox>
    </VBox>

    <!-- 🔹 Action Buttons -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Button fx:id="btnEdit" text="✏️ Modifier" styleClass="btn-edit"/>
        <Button fx:id="btnDelete" text="🗑️ Supprimer" styleClass="btn-delete"/>
    </HBox>

    <!-- 🔹 Candidatures -->
    <Button fx:id="btnCandidatures" text="📄 Voir Candidatures" styleClass="btn-candidatures"/>
</VBox>

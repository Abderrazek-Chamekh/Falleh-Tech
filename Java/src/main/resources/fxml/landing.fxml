<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Separator?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.fx.LandingController"
            style="-fx-background-color: #f0f0f0;">

    <VBox alignment="CENTER" spacing="20.0" prefWidth="800" prefHeight="600"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0"
          style="-fx-padding: 50;">

        <Text text="Bienvenue sur FallehTech"
              style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-fill: #2c3e50;" />

        <Button fx:id="btnFrontOffice" text="🌾 Espace Client (FrontOffice)"
                prefWidth="280" style="-fx-font-size: 14px;" onAction="#toggleRoleSelection"/>

        <!-- Role Options Box -->
        <VBox fx:id="roleBox" spacing="6" alignment="CENTER" visible="false" managed="false">
            <Button text="👤 Client" styleClass="role-button" onAction="#goToFrontOfficeClient"/>
            <Button text="👨‍🌾 Agriculteur" styleClass="role-button" onAction="#goToFrontOfficeAgriculteur"/>
            <Button text="🧑‍🔧 Ouvrier" styleClass="role-button" onAction="#goToFrontOfficeOuvrier"/>


        </VBox>


        <Separator prefWidth="400"/>

        <Button fx:id="btnBackOffice" text="🛠️ Espace Admin (BackOffice)"
                prefWidth="280" style="-fx-font-size: 14px;" onAction="#goToBackOffice"/>
    </VBox>
</AnchorPane>

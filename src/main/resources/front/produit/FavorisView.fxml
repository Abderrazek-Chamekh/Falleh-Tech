<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Controllers.produitfront.FavorisController"
      stylesheets="@/styles/panier.css"
      styleClass="main-pane"
      spacing="20" alignment="TOP_CENTER">

    <!-- ✅ Titre avec même style -->
    <HBox alignment="CENTER_LEFT" spacing="10" styleClass="top-bar">
        <Label text="❤ Wishlist" styleClass="section-title" />
    </HBox>

    <!-- ✅ Table styled identique au panier -->
    <TableView fx:id="tableFavoris" prefWidth="1000">
        <columns>
            <TableColumn fx:id="colNom" text="Nom" prefWidth="200"/>
            <TableColumn fx:id="colPrix" text="Prix (DT)" prefWidth="100"/>
            <TableColumn fx:id="colImage" text="Image" prefWidth="150"/>
            <TableColumn fx:id="colActions" text="Actions" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>

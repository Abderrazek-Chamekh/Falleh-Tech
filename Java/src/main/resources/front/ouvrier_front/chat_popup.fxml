<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ouvrier.ChatPopupController"
      spacing="10"
      prefWidth="400"
      prefHeight="500"
      stylesheets="@/styles/chat-popup.css"
      style="-fx-background-color: white; -fx-padding: 10.0;">

    <!-- Header -->
    <Label fx:id="lblChatWith"
           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Chat Scroll Area -->
    <ScrollPane fx:id="chatScroll"
                fitToWidth="true"
                VBox.vgrow="ALWAYS"
                style="-fx-background-color: transparent;">
        <VBox fx:id="chatArea"
              spacing="8"
              style="-fx-padding: 10.0;" />
    </ScrollPane>

    <!-- Input Area -->
    <HBox spacing="10" style="-fx-padding: 10.0;">
        <TextField fx:id="messageField"
                   promptText="Ã‰crire un message..."
                   HBox.hgrow="ALWAYS" />
        <Button fx:id="sendButton"
                text="Envoyer"
                style="-fx-background-color: #28a745; -fx-text-fill: white;" />
    </HBox>
</VBox>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@dashboard.css" fx:controller="tn.esprit.Controllers.User.Admin.AddUserController">

    <!-- Left Sidebar -->
    <left>
        <VBox prefWidth="220" spacing="20" styleClass="sidebar">
            <!-- Logo and Title Container -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="logo-title-container">
                <ImageView fitHeight="50" fitWidth="50" preserveRatio="true">
                    <image>
                        <Image url="@/Images/logo.png" />
                    </image>
                </ImageView>
                <Label text="Falleh Tech" styleClass="project-title"/>
            </HBox>

            <!-- Navigation Menu -->
            <VBox spacing="8" styleClass="nav-menu">
                <Button styleClass="nav-btn" text="Profil">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/profile.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn active" text="Dashboard" >
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/dashboard.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Blog" >
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/blog.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Candidature">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/application.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Starred">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/starred.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
                <Button styleClass="nav-btn" text="Offres">
                    <graphic>
                        <ImageView fitHeight="20" fitWidth="20" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/offer.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>

            <!-- User Profile Section -->
            <VBox spacing="10" styleClass="user-profile">
                <ImageView fitHeight="60" fitWidth="60" styleClass="profile-img">
                    <image>
                        <Image url="@/Images/icons/profile.png" />
                    </image>
                </ImageView>
                <Label fx:id="userRoleLabel" styleClass="user-role" />
                <Button styleClass="logout-btn" text="Logout">
                    <graphic>
                        <ImageView fitHeight="16" fitWidth="16" preserveRatio="true">
                            <image>
                                <Image url="@/Images/icons/LOGOUT.gif" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </VBox>
        </VBox>
    </left>

    <!-- Center Content -->
    <center>
        <VBox spacing="20" styleClass="content-container" alignment="TOP_CENTER">
            <!-- Header -->
            <HBox styleClass="header" alignment="CENTER_LEFT">
                <Label styleClass="header-title" text="Add New User" />
                <Region HBox.hgrow="ALWAYS" />
                <Button styleClass="back-btn" text="Back to Users" onAction="#handleBack" />
            </HBox>

            <!-- User Form -->
            <VBox styleClass="form-container" spacing="20" alignment="TOP_CENTER">
                <GridPane hgap="15" vgap="15">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" prefWidth="150"/>
                        <ColumnConstraints hgrow="SOMETIMES" prefWidth="300"/>
                    </columnConstraints>

                    <!-- Basic Information -->
                    <Label text="Basic Information:" GridPane.columnSpan="2" styleClass="form-section-label"/>

                    <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="firstNameField" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <TextField fx:id="lastNameField" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Email:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="emailField" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Password:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="passwordField" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Confirm Password:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <PasswordField fx:id="confirmPasswordField" GridPane.rowIndex="5" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Phone Number:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                    <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="CIN:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                    <TextField fx:id="cinField" GridPane.rowIndex="7" GridPane.columnIndex="1" styleClass="form-field"/>

                    <Label text="Role:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="roleCombo" GridPane.rowIndex="8" GridPane.columnIndex="1" styleClass="form-field">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Agriculteur"/>
                                <String fx:value="Client"/>
                                <String fx:value="Ouvrier"/>
                            </FXCollections>
                        </items>
                    </ComboBox>

                    <!-- Ouvrier Specific Fields -->
                    <Label fx:id="ouvrierLabel" text="Ouvrier Information:" GridPane.rowIndex="9" GridPane.columnIndex="0" GridPane.columnSpan="2" styleClass="form-section-label" visible="false"/>

                    <Label fx:id="disponibilityLabel" text="Disponibility:" GridPane.rowIndex="10" GridPane.columnIndex="0" visible="false"/>
                    <DatePicker fx:id="disponibilityField" GridPane.rowIndex="10" GridPane.columnIndex="1" styleClass="form-field" visible="false"/>

                    <Label fx:id="locationLabel" text="Location:" GridPane.rowIndex="11" GridPane.columnIndex="0" visible="false"/>
                    <TextField fx:id="locationField" GridPane.rowIndex="11" GridPane.columnIndex="1" styleClass="form-field" visible="false"/>

                    <Label fx:id="experienceLabel" text="Experience:" GridPane.rowIndex="12" GridPane.columnIndex="0" visible="false"/>
                    <TextField fx:id="experienceField" GridPane.rowIndex="12" GridPane.columnIndex="1" styleClass="form-field" visible="false"/>
                </GridPane>

                <!-- Form Buttons -->
                <HBox spacing="20" alignment="CENTER">
                    <Button text="Save User" styleClass="save-btn" onAction="#handleSave" />
                    <Button text="Reset Form" styleClass="reset-btn" onAction="#handleReset" />
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
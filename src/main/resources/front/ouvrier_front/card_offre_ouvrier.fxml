<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="cardContainer"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ouvrier.OffreCardOuvrierController"
      styleClass="offre-card"
      spacing="16"
      style="-fx-padding: 20;">

    <!-- Header with Expand Button -->
    <HBox alignment="TOP_RIGHT">
        <Region HBox.hgrow="ALWAYS" />
        <Button fx:id="btnExpand" text="See More" style=" -fx-font-size: 14;" />
    </HBox>

    <!-- Title & Short Description -->
    <Label fx:id="lblTitre" styleClass="offre-title" />
    <Label fx:id="lblDescription" styleClass="offre-description" wrapText="true" />

    <!-- Static Info Grid -->
    <GridPane hgap="10" vgap="5">
        <Label text="💰 Salaire:" styleClass="offre-label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <Label fx:id="lblSalaire" styleClass="offre-value" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        <Label fx:id="lblEmployerId" style="-fx-font-size: 12px; -fx-text-fill: #555;" />

        <Label text="📍 Lieu:" styleClass="offre-label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <Label fx:id="lblLocation" styleClass="offre-value" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    </GridPane>

    <!-- Status Badge -->
    <Label fx:id="lblStatus" id="lblStatus" />

    <!-- Expandable Info -->
    <VBox fx:id="expandableBox" visible="false" managed="false" spacing="8">
        <Label text="📝 Description Complète:" styleClass="offre-label" />
        <Label fx:id="lblFullDescription" wrapText="true" styleClass="offre-description" />

        <Label text="📅 Date de début:" styleClass="offre-label" />
        <Label fx:id="lblStartDate" styleClass="offre-value" />

        <Label text="📅 Date de fin:" styleClass="offre-label" />
        <Label fx:id="lblEndDate" styleClass="offre-value" />
    </VBox>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="btnApply"  maxWidth="Infinity" id="btnApply" text="Postuler" />
        <Button fx:id="btnContact"  maxWidth="Infinity" id="btnContact" text="Contacter" />
        <Button fx:id="btnWithdraw"  maxWidth="Infinity" id="btnWithdraw" text="Retirer" visible="false" />
    </HBox>

</VBox>

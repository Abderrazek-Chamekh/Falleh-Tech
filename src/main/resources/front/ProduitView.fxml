<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.fx.ProduitController"
            stylesheets="@../styles/agri-style.css">

    <VBox spacing="10" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>

        <!-- Ligne supérieure : Formulaire + Statistiques -->
        <HBox spacing="20" alignment="TOP_LEFT">

            <!-- Formulaire Produit -->
            <VBox spacing="5">
                <TextField fx:id="nomField" promptText="Nom du produit"/>
                <TextField fx:id="prixField" promptText="Prix"/>
                <TextField fx:id="stockField" promptText="Stock"/>
                <TextField fx:id="descriptionField" promptText="Description"/>
                <HBox spacing="10">
                    <ComboBox fx:id="categorieComboBox" promptText="Catégorie" prefWidth="150"/>
                    <ComboBox fx:id="sousCategorieComboBox" promptText="Sous-catégorie" prefWidth="150"/>
                </HBox>
                <HBox spacing="10">
                    <Button text="Choisir Image" onAction="#choisirImage"/>
                    <Button text="Prendre Photo" onAction="#prendrePhoto"/>
                </HBox>
                <ImageView fx:id="imagePreview" fitWidth="160" fitHeight="120" preserveRatio="true" style="-fx-border-color: gray;"/>
                <Button text="Ajouter / Modifier" onAction="#ajouterProduit"/>
            </VBox>

            <!-- Statistiques -->
            <VBox spacing="10" alignment="TOP_RIGHT">
                <Label text="Statistiques:" style="-fx-font-weight: bold"/>
                <HBox spacing="10">
                    <ComboBox fx:id="statistiqueComboBox" promptText="Choisir statistique" prefWidth="250"/>
                    <Button text="Afficher" onAction="#afficherStatistiques"/>
                </HBox>
                <BarChart fx:id="statistiqueChart" title="Statistiques Produits"
                          categoryGap="20" barGap="10" prefHeight="250" prefWidth="500">
                    <xAxis>
                        <CategoryAxis fx:id="xAxis" label="Catégorie / Produit"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis fx:id="yAxis" label="Valeur"/>
                    </yAxis>
                </BarChart>
            </VBox>
        </HBox>

        <!-- Filtres -->
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Filtrer par:"/>
            <ComboBox fx:id="filtreTypeComboBox" promptText="Choisir un filtre" prefWidth="150"/>
            <TextField fx:id="rechercheField" promptText="Recherche par nom" prefWidth="150"/>
            <ComboBox fx:id="filtreCategorieComboBox" promptText="Catégorie" prefWidth="150"/>
            <ComboBox fx:id="filtreSousCategorieComboBox" promptText="Sous-catégorie" prefWidth="150"/>
            <ComboBox fx:id="filtreStockComboBox" promptText="Stock" prefWidth="150"/>
            <Button text="Appliquer" onAction="#appliquerFiltres"/>
        </HBox>

        <!-- Tableau des produits -->
        <TableView fx:id="tableView" prefHeight="300">
            <columns>
                <TableColumn fx:id="idCol" text="ID" prefWidth="40"/>
                <TableColumn fx:id="nomCol" text="Nom" prefWidth="100"/>
                <TableColumn fx:id="descCol" text="Description" prefWidth="150"/>
                <TableColumn fx:id="prixCol" text="Prix" prefWidth="80"/>
                <TableColumn fx:id="stockCol" text="Stock" prefWidth="80"/>
                <TableColumn fx:id="categorieCol" text="Catégorie" prefWidth="100"/>
                <TableColumn fx:id="sousCategorieCol" text="Sous-catégorie" prefWidth="120"/>
                <TableColumn fx:id="imageCol" text="Image" prefWidth="100"/>
                <TableColumn fx:id="actionCol" text="Actions" prefWidth="120"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>

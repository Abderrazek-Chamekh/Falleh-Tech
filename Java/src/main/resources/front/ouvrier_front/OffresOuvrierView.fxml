<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ouvrier.OffresOuvrierController"
      spacing="20"
      style="-fx-padding: 30; -fx-background-color: #f8f9fa;"
      stylesheets="@/styles/offres-ouvrier.css">

    <Label text="Available Job Offers"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

    <!-- Search + Filters -->
    <HBox spacing="20">
        <TextField fx:id="searchField" promptText="ðŸ” Search Title..." />
        <ComboBox fx:id="statusFilter" promptText="Status" />
    </HBox>

    <!-- Dynamic Offer Cards -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
        <FlowPane fx:id="cardContainer"
                  prefWrapLength="800"
                  hgap="20" vgap="20"
                  style="-fx-padding: 20;"
                  alignment="CENTER">
            <!-- Cards are dynamically injected here -->
        </FlowPane>
    </ScrollPane>
</VBox>

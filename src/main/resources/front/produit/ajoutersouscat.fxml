<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.produitfront.AjouterSousCategorieController"
            stylesheets="@/styles/agri-stylesa.css"
            prefWidth="460" prefHeight="420">

    <VBox spacing="14" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10"
          AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">

        <padding>
            <Insets top="20" bottom="20" left="25" right="25"/>
        </padding>

        <!-- ✅ Titre centré -->
        <Label text="➕ Nouvelle Sous-Catégorie" styleClass="form-title" alignment="CENTER"/>

        <!-- ✅ Nom -->
        <VBox spacing="5" alignment="TOP_LEFT">
            <Label text="Nom" style="-fx-text-fill: black; -fx-font-size: 13px;"/>
            <TextField fx:id="nomField" promptText="Nom de la sous-catégorie"/>
            <Label fx:id="nomError" textFill="red" visible="false" styleClass="error-msg"/>
        </VBox>

        <!-- ✅ Catégorie -->
        <VBox spacing="5" alignment="TOP_LEFT">
            <Label text="Catégorie parente" style="-fx-text-fill: black; -fx-font-size: 13px;"/>
            <ComboBox fx:id="categorieComboBox" promptText="Catégorie parente" prefWidth="220"/>
            <Label fx:id="categorieError" textFill="red" visible="false" styleClass="error-msg"/>
        </VBox>

        <!-- ✅ Choix d'image -->
        <VBox spacing="5" alignment="TOP_LEFT">
            <Label text="Image" style="-fx-text-fill: black; -fx-font-size: 13px;"/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Button text="Choisir Image" onAction="#choisirImage"/>
                <Button text="Prendre Photo" onAction="#prendrePhoto"/>
            </HBox>
            <Label fx:id="imageError" textFill="red" visible="false" styleClass="error-msg"/>
        </VBox>

        <!-- ✅ Aperçu image -->
        <ImageView fx:id="imagePreview" fitWidth="140" fitHeight="100" preserveRatio="true"
                   style="-fx-border-color: lightgray;"/>

        <!-- ✅ Actions -->
        <HBox spacing="12" alignment="CENTER">
            <Button text="Ajouter" onAction="#enregistrerSousCategorie" styleClass="add-button"/>
            <Button text="Annuler" onAction="#fermerFenetre" styleClass="cancel-button"/>
        </HBox>

    </VBox>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.Controllers.ouvrier.UserProfilePopupController"
      spacing="15"
      alignment="CENTER"
      style="-fx-padding: 25; -fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.3, 0, 2);">

    <ImageView fx:id="profileImage"
               fitHeight="100"
               fitWidth="100"
               preserveRatio="true"
               style="-fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 5, 0.3, 0, 2);" />

    <Label fx:id="lblName" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <Label fx:id="lblEmail" style="-fx-text-fill: #444;"/>
    <Label fx:id="lblPhone" style="-fx-text-fill: #666;"/>
    <Label fx:id="lblAddress" style="-fx-text-fill: #666;"/>

    <Button text="Fermer"
            onAction="#handleClose"
            style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-background-radius: 6;"/>
</VBox>

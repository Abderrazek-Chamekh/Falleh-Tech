<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="tn.esprit.Controllers.User.Authentication.LoginController"
            stylesheets="@/styles/loginstyle.css"
            prefWidth="800" prefHeight="500">


    <!-- 🌿 Left Side with Profile(s) -->
    <left>
        <VBox fx:id="leftSection" alignment="TOP_CENTER" spacing="20" styleClass="left-section">

            <!-- ✅ Default User Profile Card -->
            <VBox styleClass="profile-card" alignment="CENTER" spacing="10">
                <ImageView fitWidth="100" fitHeight="100">
                    <image>
                        <Image url="@/Images/user_icon.png"/>
                    </image>
                </ImageView>
                <Label text="Zied Alimi" styleClass="profile-name"/>
                <Hyperlink text="Utiliser ce compte" onAction="#onUseLastAccount"/>
            </VBox>

            <!-- ➕ Add Another Account -->
            <Button text="➕ Ajouter un autre compte" onAction="#onAddAccount" styleClass="add-account-btn"/>

            <!-- Branding -->
            <VBox spacing="5" alignment="CENTER">
                <Label text="Falleh Tech" styleClass="brand-title"/>
                <Label text="Cultivez votre avenir avec nous 🌱" styleClass="brand-subtitle"/>
            </VBox>
        </VBox>
    </left>


    <!-- 🔐 Login Form -->
    <center>
        <VBox alignment="CENTER" spacing="15" styleClass="login-section" prefWidth="300" maxWidth="300">
            <Label text="Connexion à Falleh Tech" styleClass="title"/>

            <Label fx:id="errorLabel" styleClass="error-label" visible="false"/>
            <TextField fx:id="emailField" promptText="Email" styleClass="input-field"/>
            <PasswordField fx:id="passwordField" promptText="Mot de passe" styleClass="input-field"/>

            <Button fx:id="loginButton" text="Se Connecter" styleClass="green-button"/>
            <Button fx:id="googleButton" text="Connexion Google" styleClass="google-button"/>

            <HBox spacing="5" alignment="CENTER">
                <Label text="Pas encore inscrit ?" />
                <Hyperlink fx:id="signup" text="Rejoignez-nous !" />
            </HBox>
            <Hyperlink text="Mot de passe oublié ?" styleClass="forgot-password"/>
        </VBox>
    </center>
</BorderPane>

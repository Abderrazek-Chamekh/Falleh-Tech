<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.lang.String?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="tn.esprit.controllers.ouvrier.CalendrierOuvrierController"
      spacing="15" styleClass="calendar-root">
    <stylesheets>
        <String fx:value="/styles/calendar.css"/>
    </stylesheets>


    <Label text="📅 Mon Calendrier de Travail" styleClass="calendar-title"/>

    <!-- 🔁 Month Navigation -->
    <HBox alignment="CENTER" spacing="20">
        <Button fx:id="prevMonthBtn" text="⏴" onAction="#goToPreviousMonth"/>
        <Label fx:id="monthLabel" styleClass="month-label"/>
        <Button fx:id="nextMonthBtn" text="⏵" onAction="#goToNextMonth"/>
    </HBox>

    <!-- 📅 Grid for Days -->
    <GridPane fx:id="calendarGrid" hgap="10" vgap="10" alignment="CENTER" styleClass="calendar-grid"/>
</VBox>
